<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DeleteTabActivity">

    <Spinner
        android:id="@+id/spinner_gamelist"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:layout_constraintBottom_toTopOf="@id/delete_confirm_button"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/delete_confirm_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#C8E6C9"
        android:fontFamily="sans-serif-black"
        android:text="Delete"
        android:textColor="#000000"
        app:cornerRadius="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/spinner_gamelist" />
</androidx.constraintlayout.widget.ConstraintLayout>